<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:rowCount="7"
    android:columnCount="4"
    >

    <TextView
        android:id="@+id/result"
        android:layout_width="match_parent"
        style="@style/result"
        />

    <TextView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="Del"
        style="@style/cell"/>
    <TextView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text=" "
        style="@style/cell"/>
    <TextView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="/"
        style="@style/cell"/>
    <TextView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="x"
        style="@style/cell"/>
    <TextView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="7"
        style="@style/cell"/>
    <TextView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="8"
        style="@style/cell"/>
    <TextView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="9"
        style="@style/cell"/>
    <TextView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="-"
        style="@style/cell"/>
    <TextView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="4"
        style="@style/cell"/>
    <TextView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="5"
        style="@style/cell"/>
    <TextView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="6"
        style="@style/cell"/>
    <TextView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="+"
        style="@style/cell"/>
    <TextView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="1"
        style="@style/cell"/>
    <TextView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="2"
        style="@style/cell"/>
    <TextView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="3"
        style="@style/cell"/>
    <TextView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="="
        android:layout_rowSpan="2"
        style="@style/cell"/>

    <TextView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="0"
        android:layout_columnSpan="2"
        style="@style/cell"/>

    <TextView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="."
        style="@style/cell"/>

</GridLayout>